server {
  listen 443 ssl http2;
  server_name uptime.cuciti.net;
  location / {
       include /etc/nginx/internal.conf;
       proxy_pass http://10.10.0.28:3001;
       proxy_set_header   X-Real-IP $remote_addr;
       proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
       proxy_set_header   Upgrade $http_upgrade;
       proxy_set_header   Connection "upgrade";
       }
  ssl_certificate /etc/letsencrypt/live/cuciti.net/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/cuciti.net/privkey.pem;
       }
