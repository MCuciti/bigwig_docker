server {
  listen 443 ssl;
  server_name wireguard.cuciti.net;
  location / {
       include /etc/nginx/internal.conf;
       proxy_pass http://10.10.0.5:51821;
       }
  ssl_certificate /etc/letsencrypt/live/cuciti.net/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/cuciti.net/privkey.pem;
       }

